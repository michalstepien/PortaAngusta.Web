{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist",
    "baseUrl": "./app",
    "incremental": true,
    "paths": {
      "~/*": [
        "app/*"
      ],
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "app/**/*"
  ]
}