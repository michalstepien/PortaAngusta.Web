{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2019",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      
      "sourceMap": true,
      "allowJs": true,
      "outDir": "dist",
      "baseUrl": "./",
      "incremental": true,
      "paths": {
        "~/*": [
          "app/*"
        ],
        "*": [
          "../node_modules/*"
        ]
      }
    }
  }